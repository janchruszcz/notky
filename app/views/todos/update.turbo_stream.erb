<% if notice %>
  <%= turbo_stream.append 'notifications' do %>
    <%= render 'layouts/notice' %>
  <% end %>
<% end %>
 
<% if alert %>
  <%= turbo_stream.append 'notifications' do %>
    <%= render 'layouts/alert' %>
  <% end %>
<% end %>

<%= turbo_stream.replace("todo_#{@todo.id}", partial: 'todos/todo', locals: { todo: @todo }) %>
