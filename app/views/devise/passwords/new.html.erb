<div class="w-full h-screen flex flex-col justify-center items-center gap-3">
  <h2 class="mb-5 text-xl text-white font-semibold">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-md font-semibold mb-2 text-white" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border border-gray-300 rounded" %>
    </div>

    <div>
      <%= f.submit "Send me reset password instructions", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>