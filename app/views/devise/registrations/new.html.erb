<div class="w-full h-screen flex flex-col gap-5 my-5 justify-center items-center">
  <h2 class="text-2xl font-bold">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mt-4">
      <%= f.label :email, class: "block font-semibold" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 px-4 py-2 border rounded w-full" %>
    </div>

    <div class="mt-4">
      <%= f.label :password, class: "block font-semibold" %>
      <% if @minimum_password_length %>
      <em class="text-sm">(Minimum <%= @minimum_password_length %> characters)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 px-4 py-2 border rounded w-full" %>
    </div>

    <div class="mt-4">
      <%= f.label :password_confirmation, class: "block font-semibold" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 px-4 py-2 border rounded w-full" %>
    </div>

    <div class="mt-4">
      <%= f.submit "Sign up", class: "px-4 py-2 bg-blue-500 text-white rounded" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
