<div class="w-full">

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="text-4xl font-medium text-center my-5 tracking-wider">Today</h1>

  <div id="lists">
    <ul data-controller="sortable" class="grid grid-cols-3 gap-4">
        <% @lists.each do |list| %>
            <li data-sortable-update-url="<%= sort_list_path(list) %>">
                <%= render list %>
            </li>
        <% end %>
    </ul>
  </div>

</div>
